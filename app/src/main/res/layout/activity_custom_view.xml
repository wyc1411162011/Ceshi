<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <Button
        android:id="@+id/bt_custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="自定义View"/>
    <Button
        android:id="@+id/bt_invalidate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="invalidate的view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.yonyou.customview.HorizontalScrollViewEx
            android:id="@+id/hsve"
            android:layout_width="fill_parent"
            android:background="#ffff00"
            android:layout_height="fill_parent">
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ff0000"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffff00"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#00ff00"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ff0000"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffff00"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#00ff00"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ff0000"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffff00"/>
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#00ff00"/>
        </com.yonyou.customview.HorizontalScrollViewEx>
    </LinearLayout>

    <com.yonyou.customview.MyLinearLayout
        android:id="@+id/my_ll"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#ffff00"
        android:orientation="vertical">

        <TextView
            android:id="@+id/v_beyond_parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#ff0000"
            android:padding="10dp"
            android:text="福建省巧克力副经理卡萨丁交房了卡萨丁交房了卡萨丁交房了卡萨丁交房了卡视角的弗兰克时代峻峰"
            android:textColor="#ffff00" />
    </com.yonyou.customview.MyLinearLayout>


</LinearLayout>